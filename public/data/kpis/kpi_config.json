{
  "kpis": [
    {
      "id": "throughput",
      "label": "Throughput",
      "description": "Orders processed per hour",
      "unit": "orders/hr",
      "overlayType": "heat_throughput",
      "thresholds": {
        "critical": { "operator": "below", "value": 30 },
        "watch": { "operator": "below", "value": 45 },
        "normal": { "operator": "above", "value": 45 }
      }
    },
    {
      "id": "labor_utilization",
      "label": "Labor Utilization",
      "description": "Percentage of worker time active",
      "unit": "%",
      "overlayType": "heat_utilization",
      "thresholds": {
        "critical": { "operator": "below", "value": 60 },
        "watch": { "operator": "below", "value": 75 },
        "normal": { "operator": "between", "value": [75, 90] }
      }
    },
    {
      "id": "orders_at_risk",
      "label": "Orders at Risk",
      "description": "Orders likely to miss SLA",
      "unit": "orders",
      "overlayType": "heat_congestion",
      "thresholds": {
        "critical": { "operator": "above", "value": 10 },
        "watch": { "operator": "above", "value": 5 },
        "normal": { "operator": "below", "value": 5 }
      }
    },
    {
      "id": "zone_congestion",
      "label": "Zone Congestion",
      "description": "Worker density across zones",
      "unit": "workers",
      "overlayType": "heat_congestion",
      "thresholds": {
        "critical": { "operator": "above", "value": 16 },
        "watch": { "operator": "above", "value": 13 },
        "normal": { "operator": "below", "value": 13 }
      }
    },
    {
      "id": "on_time_delivery",
      "label": "On-Time Delivery",
      "description": "Percentage of orders delivered on time",
      "unit": "%",
      "thresholds": {
        "critical": { "operator": "below", "value": 85 },
        "watch": { "operator": "below", "value": 92 },
        "normal": { "operator": "above", "value": 92 }
      }
    },
    {
      "id": "order_accuracy",
      "label": "Order Accuracy",
      "description": "Percentage of orders picked accurately",
      "unit": "%",
      "thresholds": {
        "critical": { "operator": "below", "value": 95 },
        "watch": { "operator": "below", "value": 98 },
        "normal": { "operator": "above", "value": 98 }
      }
    },
    {
      "id": "dock_utilization",
      "label": "Dock Utilization",
      "description": "Percentage of dock doors actively in use",
      "unit": "%",
      "thresholds": {
        "critical": { "operator": "below", "value": 50 },
        "watch": { "operator": "below", "value": 70 },
        "normal": { "operator": "between", "value": [70, 90] }
      }
    },
    {
      "id": "space_utilization",
      "label": "Space Utilization",
      "description": "Percentage of warehouse capacity in use",
      "unit": "%",
      "thresholds": {
        "critical": { "operator": "above", "value": 95 },
        "watch": { "operator": "above", "value": 88 },
        "normal": { "operator": "between", "value": [70, 88] }
      }
    },
    {
      "id": "avg_pick_time",
      "label": "Avg Pick Time",
      "description": "Average time to pick an order",
      "unit": "sec",
      "thresholds": {
        "critical": { "operator": "above", "value": 180 },
        "watch": { "operator": "above", "value": 120 },
        "normal": { "operator": "below", "value": 120 }
      }
    },
    {
      "id": "equipment_uptime",
      "label": "Equipment Uptime",
      "description": "Percentage of forklifts operational",
      "unit": "%",
      "thresholds": {
        "critical": { "operator": "below", "value": 85 },
        "watch": { "operator": "below", "value": 92 },
        "normal": { "operator": "above", "value": 92 }
      }
    }
  ]
}
